{
  "name": "inskrap-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./src/main/main.js",
  "description": "Help you find your client",
  "author": "Chris",
  "scripts": {
    "dev": "vite",
    "build": "concurrently \"NODE_ENV=production\" \"electron-builder\"",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-vite build",
    "start": "concurrently \"NODE_ENV=development\" \"npm run dev\" \"npx electron .\" \"python ../backend-app/app.py\""
  },
  "build": {
    "appId": "com.wirestorm.inskrap",
    "productName": "inSkrap",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/renderer/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend-app/",
        "to": "backend-app/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^1.7.2",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "electron-vite": "^2.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1",
    "socket.io-client": "^4.7.5",
    "wait-on": "^8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^32.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "vite": "^5.3.4"
  }
}
